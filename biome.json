{
  "linter": {
    "rules": {
      "recommended": true,
      "style": {
        "useTemplate": "off",
        "useSingleVarDeclarator": "off"
      },
      "a11y": {
        "noNoninteractiveTabindex": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "tab",
    "indentWidth": 4,
    "lineEnding": "lf",
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "bracketSameLine": true,
      "bracketSpacing": true,
      "quoteProperties": "asNeeded",
      "semicolons": "always"
    }
  }
}